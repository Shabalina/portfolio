extends ../template

block variables
    - var title = 'Блог'

block content
    section.sliding_bar 
        .slide__menu
            a.slide_toggle
            ul(style={display: 'none'}).slide_post_list.slide_post_list
                each item in ['Самое важное в SASS', 'Самый необходимый набор Gulp плагинов', 'Приёмы в вёрстке, без которых не обходится ни один сайт', 'Почему я выбрал Jade']
                        li.slide_post_list__item
                            a.slide_article #{item}   
    include ../common/hero.pug
    section.section.blog 
            
        .blog__menu
            ul.post_list
                each item in ['Самое важное в SASS', 'Самый необходимый набор Gulp плагинов', 'Приёмы в вёрстке, без которых не обходится ни один сайт', 'Почему я выбрал Jade']
                        li.post_list__item
                            a.article #{item}
        .blog__content            .
