            - var date1 = '27 ноября 2016'
            - var date2 = '12 августа 2016'
            - var date3 = '03 мая 2016'
            - var date4 = '19 декабря 2015'
            mixin posts(title, pDate, article_text, image)
                li.post
                    .section__title.post__title=title
                    .post__date=pDate
                    p.post__text=article_text
                    hr(color="gray", size="2px")

            
            ul.blog__posts
                +posts('Самое важное в SASS', date1, text1)
                +posts('Самый необходимый набор Gulp плагинов', date2, text2)
                +posts('Приёмы в вёрстке, без которых не обходится ни один сайт', date3, text3)
                +posts('Почему я выбрал Jade', date4, text4)
