    section.section.hero
        .hero__socials
            ul.socials
                each item in ['fb', 'github', 'in']
                    li.socials__item
                        a(href=`${item}`).socials__ltem
        //next block is mix block & element
        a(href='').hamburger.hero__menu 
        .hero__title
